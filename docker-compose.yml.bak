services:
  app:
    # Define o serviço principal da aplicação
    build: .
    restart: always
    ports:
      - "127.0.0.1:8080:8080"

    environment:
      DATABASE_URL: mysql+pymysql://user:password@db:3306/dipe

    volumes:
      - /home/dipe/DIPEFast/templates/static:/app/templates/static

    depends_on:
      db:
        condition: service_healthy

  db:
    image: mysql:8.0
    restart: always

    environment:
      MYSQL_ROOT_PASSWORD: root_password
      MYSQL_DATABASE: dipe
      MYSQL_USER: user
      MYSQL_PASSWORD: password

    volumes:
      - db_data:/var/lib/mysql

    healthcheck:
      test: ["CMD", "mysqladmin", "ping", "-h", "localhost"]
      timeout: 20s
      retries: 10
      start_period: 10s

volumes:
  db_data:
